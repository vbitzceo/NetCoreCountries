@using voidBitz.NetCore.Utilities

<script type="text/javascript">
    $(function () {
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "rtl": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": 200,
            "hideDuration": 1000,
            "timeOut": 4000,
            "extendedTimeOut": 4000,
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

    @if (TempData[AppConstants.Success] != null)
    {
       @Html.Raw("toastr.success(\"" + @TempData[AppConstants.Success] + "\")");
    }

    @if (TempData[AppConstants.Failure] != null)
    {
        @Html.Raw("toastr.error(\"" + @TempData[AppConstants.Failure] + "\")");
    }
});
</script>
